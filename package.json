{
  "name": "b2p2",
  "version": "0.2.0",
  "license": "MIT",
  "devDependencies": {
    "@types/glob-to-regexp": "^0.4.1",
    "@types/node": "^17.0.33",
    "@types/prettier": "^2.6.1",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "concurrently": "^7.1.0",
    "del-cli": "^4.0.1",
    "eslint": "^8.15.0",
    "eslint-config-esnext": "^4.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-recommended": "^4.1.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "glob-to-regexp": "^0.4.1",
    "lua-types": "^2.11.0",
    "luassert-tstl": "^0.3.0-experimental.7",
    "npm-watch": "^0.11.0",
    "prettier": "^2.6.2",
    "testorio": "^1.2.0",
    "testorio-tools": "^0.3.4",
    "ts-node": "^10.7.0",
    "typed-factorio": "^1.1.0",
    "typescript": "^4.6.4",
    "typescript-to-lua": "^1.4.4",
    "typescript-tstl-plugin": "^0.3.2"
  },
  "scripts": {
    "build:plugin": "tsc -p tstlPlugin/tsconfig.json",
    "build:locale": "ts-node scripts/gen-locale-defs.ts",
    "build:gui-specs": "ts-node scripts/gen-gui-specs.ts",
    "build:scripts": "concurrently \"yarn build:plugin\" \"yarn build:locale\" \"yarn build:gui-specs\"",
    "build:release": "tstl -p tsconfig-release.json",
    "prepare-package": "yarn run clean && yarn run build:scripts && yarn run build:release",
    "build": "yarn build:scripts && tstl",
    "watch": "tstl --watch",
    "watch:locale": "npm-watch",
    "clean": "del-cli \"**/*.lua\" \"!**/*.def.lua\" \"!**/node_modules/**\"",
    "remove-empty-dirs": "find ./mod -type d -empty -delete",
    "deep-clean": "yarn clean && yarn remove-empty-dirs"
  },
  "watch": {
    "build:locale": "mod/locale/en/en.cfg"
  }
}
