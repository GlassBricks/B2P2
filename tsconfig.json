{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["typed-factorio/runtime", "testorio", "luassert-tstl"],
    "plugins": [
      {
        "name": "typescript-tstl-plugin"
      }
    ],
    "lib": ["esnext"],
    "strict": true,
    "experimentalDecorators": true,
    "rootDir": "src",
    "outDir": "src",
    "resolveJsonModule": true
  },
  "tstl": {
    "luaTarget": "5.2",
    "noResolvePaths": ["__testorio__/init"],
    "noImplicitSelf": true,
  },
  "include": [
    "src"
  ],
  "exclude": []
}
